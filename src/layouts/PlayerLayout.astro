---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "EtoSora player" } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}/favicon.svg`}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen bg-gray-50 dark:bg-gray-900 overflow-x-hidden max-w-screen"
  >
    <div class="flex flex-col min-h-screen">
      <!-- Header -->
      <header
        class="h-16 sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-full items-center justify-between">
          <div class="flex items-center gap-2 pl-4">
            <a href={import.meta.env.BASE_URL || "/"} class="text-xl font-bold"
              >EtoSora player</a
            >
          </div>
          <div class="flex items-center gap-4">
            <!-- Social links placeholder -->
            <a
              href="https://www.youtube.com/@etosora"
              target="_blank"
              class="text-sm font-medium hover:underline">YouTube</a
            >
            <a
              href="https://x.com/etosora_info"
              target="_blank"
              class="text-sm font-medium hover:underline">X</a
            >
            <a
              href="https://github.com/6r-rd/etosora-player"
              target="_blank"
              class="text-sm font-medium hover:underline">GitHub</a
            >
          </div>
        </div>
      </header>

      <!-- Main content -->
      <div class="flex flex-1 container w-full">
        <!-- Sidebar (desktop) -->
        <aside class="w-96 hidden md:block border-r pt-4 shrink-0">
          <slot name="sidebar" />
        </aside>

        <!-- Main content area -->
        <main class="flex-1 p-4">
          <slot />
        </main>
      </div>

      <!-- Mobile sidebar - rendered outside the main content container -->
      <div class="md:hidden">
        <slot name="sidebar" />
      </div>
    </div>

    <!-- Additional scripts -->
    <slot name="scripts" />
  </body>
</html>
